<header>

            <%= form_tag({ controller: "products", action: "locate" }, method: "get", class: ["navbar-form", "navbar-left"], role: "search", style: ["margin-top: 2%;", "margin-left: 1%;"]) do %>
               <ul class="nav nav-left">
                  <li><%= text_field_tag(:artikul, nil, placeholder: "Введите код товара", class: "form-control", style: "width: 155px;") %></li>   
               </ul>
             <% end %>             
     <nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation" style="margin-top: -1%;">
            <div class="navbar-header nav navbar-right" style="margin-top: 0.1%;">
               <ul class="nav navbar-nav">
                                </ul>
            </div>   
     </nav>


<div class="col-sm-12 col-xs-6 col-md-12 col-md-offset-2" style="margin-top: -6%;">
     <%= link_to image_tag("citylogo1.png", class: "logo"), root_path %><%= image_tag("telefon-ico.png", width: 32, weight: 32) %>
     <font size="3.5" face="Century Gotic" color="#fff">(098) </font>
     <font size="4" face="Century Gotic" color="#fff"> - 745-85-45 </font>
     <%= link_to " Заказать обратный звонок", call_back_path, class: ["col-sm-offset-1 col-md-offset-1 col-xs-offset-1", "cat", "glyphicon glyphicon-phone-alt"] %>
</div> 
<div class="col-sm-12 col-md-12 col-xs-6 col-sm-offset-1 col-md-offset-3 col-xs-offset-1">
         <ul class="nav navbar-nav">
               <% @group_tovs_filter = GroupTov.where(lvisible: true) %>
               <% @group_tovs_filter.each do |txt| %>
                       <li id="fat-menu" class="dropdown"> 
                       <a href="#" class="dropdown-toggle cat" data-toggle="dropdown" style="color: #fff; background: #000; padding-top: 0px;"><%= txt.ctxt  %><b class="caret"></b></a>
               <% if @group_tovs_filter %>
                    <ul class="dropdown-menu pull-right" style="filter:alpha(opacity=60); opacity: 0.7; color: #000; background: #000;">
                       <% kat_all = Kategory.where(lvisible: true, group_tov_id: txt.id) %>
                       <% kat_all.each do |f| %>
                         <li> <%= link_to f.ctxt_ua, kategory_group_tov_path(f.id, txt.id), class: ["cat"] %></li>
                       <% end %>
                    </ul> 
               <% end %>         
               <% end %> 
        </ul>
</div>
<div class="col-sm-6 col-md-5 col-sm-offset-2 col-md-offset-3">
   <hr style="margin-left: 6%; height: 3; width: 113%;">
</div>   
</header>
 
