        <td width="100"><%= image_tag(connection.avatar_url, title: connection.color.ctxt, alt: connection.color.ctxt, size: "60x80")%>
        <td width="100">
        <td width="100">
        <% if current_user.admin? %>
           <td width="100"><%= link_to "Изменить", edit_connection_path(connection.id) %>
