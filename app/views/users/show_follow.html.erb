<% provide(:title, @title)%>
<div class="row">
   <aside class="col-md-4">
      <section>
         <%= gravatar_for @user %>
         <h3> <%= @user.name %> </h3>
         <span> <%= link_to "перегляд профілю", @user %> </span>
         <span><b> Повідомлень: </b> <%= @user.microposts.count %></span>
      </section>
      <section>
         <%= render 'shared/stats' %>
         <% if @users.any? %>
            <div class="user_avatars">
               <% @users.each do |user| %>
                  <%= link_to gravatar_for(user), user %>
               <% end %>
            </div>   
         <% end %>
      </section>
   </aside>
   <div class="col-md-8">
      <h3> <% @title %> </h3>
         <% if @users.any? %>
            <ul class="users">
            <%= render @users %>
            </ul>
            <%= will_paginate %>
         <% end %>
   </div>
</div>   
