<div class="col-md-offset-2">
    <div class="highslide-gallery">
        <%= link_to image_tag(@show_photo.avatar.thumb.url, size: "120x160", title: "Нажмите, чтоб раскрыть", alt: "Нет фото"), 
                   path_to_image(@show_photo.avatar.url), id: "thumb1", class: "highslide", onclick: "return hs.expand(this, miniGalleryOptions1)" %>
        <% unless @additional_photos.nil? %>
            <% @additional_photos.each do |f| %>
               <%= link_to image_tag(f.avatar.thumb.url, size: "120x160", title: "Нажмите, чтоб раскрыть", alt: "Нет фото"), 
                   path_to_image(f.avatar.url), id: "thumb1", class: "highslide", onclick: "return hs.expand(this, miniGalleryOptions1)" %>                       
            <% end %>
        <% end %>
    </div>    
</div>

