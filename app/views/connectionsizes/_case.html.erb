<% case  $filter_value[0] %>
    <% when 1 %>
        <% @sizes_array = Size.where(group_tov_id: [0, 1]).map { |size| [size.ctxt, size.id] } %>
        <% @sizes_array = Size.where(group_tov_id: [0, 5]).map { |size| [size.ctxt, size.id] } if $filter_value[1] == 21 %>
    <% when 2 %>
        <% @sizes_array = Size.where(group_tov_id: [0, 2]).map { |size| [size.ctxt, size.id] } %>
        <% @sizes_array = Size.where(group_tov_id: [0, 6]).map { |size| [size.ctxt, size.id] } if $filter_value[1] == 29 %>
    <% when 3 %>
        <% @sizes_array = Size.where(group_tov_id: [0, 3]).map { |size| [size.ctxt, size.id] } %>
    <% when 4 %>
        <% @sizes_array = Size.where(group_tov_id: [0, 4]).map { |size| [size.ctxt, size.id] } if $filter_value[1] == 2 %>
        <% @sizes_array = Size.where(group_tov_id: [0, 7]).map { |size| [size.ctxt, size.id] } if $filter_value[1] == 3 %>
        
<% end %>    

