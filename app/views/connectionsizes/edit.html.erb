   <div class="col-md-8 col-md-offset-1">
   <div class="well">
       <table border="2" bordercolor="#ff00ff" align="center">  
         <%= render "shared/tr_block" %>
            <tr align="center">
                  <td></td>
                  <td><%= @connectionsize.size.ctxt %></td>
                  <td></td>   

            </tr>
            <tr>      
                  <td align="center"><td>
                  <td></td>
